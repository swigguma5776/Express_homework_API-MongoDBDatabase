<%- include('../partials/header.ejs') %>

<main class="container">
    <h1 class="my-4">Tweeta - Dashboard</h1>
    <form method='POST' action='post/create'>
        <div class="form-group">
            <label for="postTitle">
                Post Title
            </label>
            <input type="text" name="title" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="postDescription">
                Post Description
            </label>
            <input type="text" name="description" class="form-control" required>
        </div>
            <button href="/post/create" type="submit" class="btn btn-primary">Create Post +</button>
        </div>
    <div class="d-flex justify-content-between align-items-center mt-5 mb-3">
        <h2 class="my-2">All Posts</h2>
        <!-- <a href="/post/create" class="btn btn-primary">Create Post +</a> -->
    </div>
    <table class="table table-bordered">
        <tbody>
            <% if (posts) {posts.forEach(post => { %>
                <tr>
                    <td>
                        <a href="/profile" style="font-size: 25px"><%= post.user.username %></a>
                        <p><strong>Post Title</p></strong>
                        <p class="mb-0"><%= post.title %></p>
                        <br>
                        <p><strong>Post Description</p></strong>
                        <p class="mb-0"><%= post.description %></p>   
                    </td>
                </tr>
            <% })} %>
        </tbody>
    </table>
</main>
<%- include('../partials/footer.ejs') %>